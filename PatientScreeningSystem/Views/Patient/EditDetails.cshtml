@model PatientScreeningSystem.Models.Patient

<h2 class="text-center">Edit Patient Details</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="PatientId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AadhaarNumber"></label>
        <input asp-for="AadhaarNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReasonForVisit"></label>
        <input asp-for="ReasonForVisit" class="form-control" />
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-success">Update Patient</button>

        <!-- Form to delete the patient -->
        
    </div>
</form>

<form asp-action="RemovePatient" method="post">
    <input type="hidden" asp-for="PatientId" />
    <button type="submit" class="btn btn-danger"
            onclick="return confirm('Are you sure you want to delete this patient?');">
        Delete Patient
    </button>
</form>

