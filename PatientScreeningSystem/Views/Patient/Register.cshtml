@model PatientScreeningSystem.Models.Patient

<h2 class="text-center">Patient Registration</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AadhaarNumber"></label>
        <input asp-for="AadhaarNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReasonForVisit"></label>
        <input asp-for="ReasonForVisit" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Patient</button>
</form>
